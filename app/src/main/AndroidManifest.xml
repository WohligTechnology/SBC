<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wohlig.stakes" >

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:icon" >
        <activity
            android:name="com.wohlig.stakes.MainActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="DATABASE"
                android:value="stake_betcalculator.db" />
            <meta-data
                android:name="VERSION"
                android:value="2" />
            <meta-data
                android:name="QUERY_LOG"
                android:value="true" />
            <meta-data
                android:name="DOMAIN_PACKAGE_NAME"
                android:value="com.wohlig.stakes;" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wohlig.stakes.NewBook"
            android:label="@string/title_activity_new_book" >
        </activity>
        <activity
            android:name="com.wohlig.stakes.OpenBook"
            android:label="@string/title_activity_open_book" >
        </activity>
        <activity
            android:name="com.wohlig.stakes.newBet"
            android:label="@string/title_activity_new_bet" >
        </activity>
        <activity
            android:name="com.wohlig.stakes.ViewBets"
            android:label="@string/title_activity_view_bets" >
        </activity>
    </application>

</manifest>
